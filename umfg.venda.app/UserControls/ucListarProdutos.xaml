<UserControl x:Class="umfg.venda.app.UserControls.ucListarProdutos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:umfg.venda.app.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1080">
    <Viewbox Stretch="Uniform">
        <Grid Background="#ECF0F1" Width="1080" Height="720">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- nesta primeira grid vamos apresentar os produtos !-->
            <Grid Grid.Row="0">
                <ScrollViewer Margin="10">
                    <ListBox ItemsSource="{Binding Produtos}"
                     SelectedItem="{Binding ProdutoSelecionado}"
                     SelectionMode="Single"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Width="200" Height="495">
                                    <StackPanel>
                                        <Border Width="200" Height="200"
                                        CornerRadius="5" Margin="5">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="1"/>
                                            </Border.Effect>

                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Imagem}"/>
                                            </Border.Background>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Button
                        Content="_Adicionar"
                        CommandParameter="{Binding}"
                        Command="{Binding Adicionar, UpdateSourceTrigger=PropertyChanged}"                        
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Margin="10 5 0 0 "
                        Foreground="White"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <TextBlock Text="Subtotal: " Margin="0 10 0 0" FontSize="16"/>
                    <TextBlock Text="R$ " FontWeight="SemiBold" Margin="10 10 0 0" FontSize="16"/>
                    <TextBlock Text="{Binding Pedido.Total}" FontWeight="SemiBold" Margin="10 10 0 0"
                       FontSize="16"/>

                    <Button
                        Content="_Receber"
                        CommandParameter="{Binding}"
                        Command="{Binding Receber, UpdateSourceTrigger=PropertyChanged}"                        
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Margin="0 5 10 0 "
                        Foreground="White"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
    
</UserControl>
